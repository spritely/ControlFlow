<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard1.0</TargetFramework>
    <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
    <PackageId>Spritely.Recipes.Redo</PackageId>
    <Copyright>Copyright (C) 2017</Copyright>
    <NeutralLanguage>en-US</NeutralLanguage>
    <AssemblyName>Spritely.Redo</AssemblyName>
    <RootNamespace>Spritely.Redo</RootNamespace>
    <NuspecFile>.\Redo.nuspec</NuspecFile>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|AnyCPU'">
    <TreatWarningsAsErrors>True</TreatWarningsAsErrors>
    <TreatSpecificWarningsAsErrors />
    <DocumentationFile>bin\Release\netstandard1.0\Redo.xml</DocumentationFile>
    <DefineConstants>TRACE;SpritelyRecipesProject;RELEASE;NETSTANDARD1_0</DefineConstants>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
    <TreatWarningsAsErrors>True</TreatWarningsAsErrors>
    <TreatSpecificWarningsAsErrors />
    <DocumentationFile>bin\Debug\netstandard1.0\Redo.xml</DocumentationFile>
    <DefineConstants>TRACE;DEBUG;SpritelyRecipesProject;NETSTANDARD1_0</DefineConstants>
  </PropertyGroup>

</Project>
